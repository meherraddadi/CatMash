@model CatMash.Models.Cat

@{
    ViewData["Title"] = "Supprimer";
}

<h1>Supprimer</h1>

<h3>Vouler vous vraiment supprimer les détails de ce chat?</h3>
<div>
    <h4>Chat</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cat_Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cat_Name)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Picture_Path)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.Picture_Path" alt="image" width="318" height="159" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la List</a>
    </form>
</div>
