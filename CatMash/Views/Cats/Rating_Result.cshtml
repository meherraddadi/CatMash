@model IEnumerable<CatMash.Models.Cat>

@{
    ViewData["Title"] = "Résultat De Vote";
}

<h1>Résultat De Vote</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cat_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture_Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cat_Name)
            </td>
            <td>
                <img src="~/images/@item.Picture_Path" alt="image" width="318" height="159" />
            </td>
            <td>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="@item.Score" aria-valuemin="0" aria-valuemax="100" style="width: @item.Score%;">
                        @item.Score%
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
